<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvkontak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Kontak Utama"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="8dp"
                android:background="@color/colorBackground"
                android:layout_below="@+id/tvkontak"/>

            <ImageView
                android:id="@+id/ivPassenger"
                android:layout_width="164dp"
                android:layout_height="164dp"
                android:layout_below="@+id/line"
                android:layout_margin="8dp"
                android:src="@drawable/passenger"/>

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_toEndOf="@id/ivPassenger"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Johny Depp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNama"
                android:layout_toEndOf="@id/ivPassenger"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="johnydepp@gmail.com"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmail"
                android:layout_toEndOf="@id/ivPassenger"
                android:textSize="16sp"
                android:text="+628822112434"/>
        </RelativeLayout>


    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDaftarPenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Penumpang Pendamping"/>

            <View
                android:id="@+id/lineDaftarPenumpang"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="8dp"
                android:background="@color/colorBackground"
                android:layout_below="@+id/tvDaftarPenumpang"/>

            <TextView
                android:id="@+id/tvPenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineDaftarPenumpang"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:text="Achmad"/>

            <View
                android:id="@+id/lineSeparatorDaftarPenumpang"
                android:layout_width="3dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/ivDeletePenumpang"
                android:layout_below="@id/lineDaftarPenumpang"
                android:layout_marginEnd="8dp"
                android:background="@color/colorBackground" />

            <ImageView
                android:id="@+id/ivDeletePenumpang"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/garbage"
                android:layout_marginEnd="16dp"
                android:layout_alignEnd="@id/tvPenumpang"
                android:layout_below="@id/lineDaftarPenumpang"/>
        </RelativeLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddPenumpang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="@color/colorButton"
        android:src="@drawable/add"/>
</LinearLayout>