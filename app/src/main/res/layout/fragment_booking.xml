<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <android.support.design.card.MaterialCardView
        android:id="@+id/cvrute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorText">

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Pilih Kota Asal"/>

            <TextView
                android:id="@+id/tvAsal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Masukan Asal"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:layout_centerInParent="true"
                    android:background="@color/colorBackground"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:fitsSystemWindows="true"
                    android:layout_alignRight="@id/line"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="11dp"
                    android:background="@color/colorText"
                    android:src="@drawable/up_and_down" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Pilih Kota Tujuan"/>

            <TextView
                android:id="@+id/tvAsal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Masukan Tujuan"/>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:id="@+id/cvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvrute"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_weight=".3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Pilih Tanggal Perjalanan"/>

                <TextView
                    android:id="@+id/hari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorBlack"
                    android:text="Rabu"/>

                <TextView
                    android:id="@+id/tgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingLeft="8dp"
                    android:text="5 Februari 2019"
                    android:textColor="@color/colorBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_weight=".1">

                <TextView
                    android:id="@+id/tvAsal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="sans-serif-medium"
                    android:text="Hari ini"/>


            </LinearLayout>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:id="@+id/cvJam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvDate"
        android:background="@color/colorText"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Pilih Jam Keberangkatan"/>



        <TextView
            android:id="@+id/tvJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:text="Masukan Jam Keberangkatan"/>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

    <android.support.design.card.MaterialCardView
        android:id="@+id/cvPenumpang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvJam"
        android:background="@color/colorText"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Pilih Penumpang"/>

            <TextView
                android:id="@+id/tvPenumpang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:text="Masukan Penumpang"/>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/cvPenumpang"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:fitsSystemWindows="true"
        android:src="@drawable/next_arrow"/>

    </RelativeLayout>
